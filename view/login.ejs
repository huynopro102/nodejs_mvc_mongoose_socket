<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="http://localhost:3000/congkhai/style.css" />

  <!-- font roboto -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
</head>

<body>
  <!-- form login -->
  <div class="login">
    <div class="login__container">
      <h1>Đăng Nhập</h1>
      <form id="loginForm">
        <h5>Email</h5>
        <input type="text" class="input-login-username" />
        <h5>Password</h5>
        <input type="password" class="input-login-password" />
        <button type="submit" class="login__signInButton">Đăng Nhập</button>
      </form>
      <a href="http://localhost:3000/signup" class="login__registerButton">Tạo tài khoản mới</a>
      <a href="http://localhost:3000/forgotpassword" class="login__registerButton">quên mật khẩu</a>
    </div>
  </div>

  <!-- Include Socket.IO and jQuery -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
    crossorigin="anonymous"></script>

  <!-- Your jQuery script -->
  <script>
    var socket = io();

    $(document).ready(function () {
      $("#loginForm").submit(function (e) {
        e.preventDefault();
        const email = $(".input-login-username").val();
        const password = $(".input-login-password").val();
        if (!email || !password) {
          alert("Không để trống");
        } else {
          socket.emit("userSumbitLogin",email+"/"+password);
          $(".input-login-username").val('')
          $(".input-login-password").val('')
        }

        // Thực hiện các thao tác khác ở đây nếu cần
      });
    });
  </script>
</body>

</html>